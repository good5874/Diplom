@model Diplom.Models.Tables.Orders

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo.TypeOfCargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.TypeOfCargo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationLoading)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationLoading)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationUnloading)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationUnloading)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Cost != null)
    {
        <form asp-controller="CustromerOrders" asp-action="Pay">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Pay" class="btn btn-primary" />
            </div>
        </form>
    }
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

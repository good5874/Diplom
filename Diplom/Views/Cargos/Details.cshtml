@model Diplom.Models.Tables.Cargos
@using Diplom.ViewsModels

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Cargo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.Name(UnitsModel.Volume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.Name(UnitsModel.CargoVolume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CargoVolume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeOfCargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeOfCargo)
        </dd>
    </dl>
</div>
<div>

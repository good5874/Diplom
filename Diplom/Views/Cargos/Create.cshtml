@model Diplom.Models.Tables.Cargos
@using Diplom.ViewsModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">@UnitsModel.Weight</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CargoVolume" class="control-label">@UnitsModel.CargoVolume</label>
                <input asp-for="CargoVolume" class="form-control" />
                <span asp-validation-for="CargoVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfCargo" class="control-label"></label>
                <input asp-for="TypeOfCargo" class="form-control" />
                <span asp-validation-for="TypeOfCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

